<div class="grid_8">
  <hgroup><h2>ArtsReady Library</h2></hgroup>
  <section class="list-kb">
    <% @public_articles.each do |article| %>
    <article>
      <h3><%= link_to article.title, public_article_path(article) %></h3>
      <p><time><%= article.published_on.to_formatted_s(:long) %></time></p>
    </article>
    <% end %>
  </section>
</div>
