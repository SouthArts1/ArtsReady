<h1>Our Team</h1>

<ul class="top-nav settings">
    <li class=""><%= link_to 'My Info', edit_user_path(current_user) %></li>
    <li class=""><%= link_to "Organization", edit_organization_path(current_org) %></li>
    <li class="active"><%= link_to "Our Team", organization_users_path(current_org) %></li>
</ul>

<div class="grid_12">
  <section>
    <table class="users">
      <thead>
        <td><p>First Name</p></td>
        <td><p>Last Name</p></td>
        <td><p>Email</p></td>
        <td><p>Last Login</p></td>
        <td><p>Role</p></td>
        <td><p></p></td>
      </thead>
      <tbody>
        <% current_org.users.each do |user| %>
          <tr>
            <td class="name"><p><%= user.first_name %></p></td>
            <td class="name"><p><%= user.last_name %></p></td>
            <td class="email"><p><%= user.email %></p></td>
            <td class="login"><p><%= user.last_login_at %></p></td>
            <td class="role"><p><%= user.role %></p></td>
            <td class="actions"><p>
              <%= link_to 'edit', edit_user_path(user), :class => 'button blue' if user.is_admin?%>
              <%= link_to 'reset password', "", :class => 'button blue' %>
              <%= link_to 'disable', "", :class => 'button white' %>
            </p></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </section>  
  <section> 
    <table class="add-user">
      <thead>
        <td colspan="5"><p>Add another user</p></td>
      </thead>
      <tbody>
        <%= form_for(current_org) do |org_form| %>
        <tr>
          <%= org_form.fields_for(:users,current_org.users.build) do |f| %>
          <td class="name"><p><%= f.text_field:first_name, :placeholder => 'First Name'%></p></td>
          <td class="name"><p><%= f.text_field:last_name, :placeholder => 'Last Name'%></p></td>
          <td class="email"><p><%= f.text_field :email, :placeholder => 'Email'%></p></td>
          <td class="role">
          </td>
          <td class="add"><p><%= f.submit 'Add', :class => 'button green'%></p></td>
          <% end %>
        </tr>
        <% end %>
      </tbody>
    </table>
  </section>
</div>