<!DOCTYPE html>
<html>
<head>
  <title>ArtsReady</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag "jquery-1.4.2.min", "modernizr-1.6.min", "jquery.uniform.min", "jquery-ui-1.8.10.custom.min", "tablesorter.min.js", "application" %>
  <%= csrf_meta_tag %>
</head>
<!--[if lt IE 7 ]> <body class="ie6"> <![endif]-->
<!--[if IE 7 ]>    <body class="ie7"> <![endif]-->
<!--[if IE 8 ]>    <body class="ie8"> <![endif]-->
<!--[if IE 9 ]>    <body class="ie9"> <![endif<]-->
<!--[if (gt IE 9)|!(IE)]><!--> <body lang="en">  <!--<![endif]-->
  <div class="wrapper">
    <header>
      <div class="container container_12 clearfix">
        <h1 class="logo f-left">
          <a href="/" title="Home">ArtsReady</a>
        </h1>
        <div class="user-nav">
          <ul>
            <% if user_signed_in? %>
            <li><a href="">Settings</a></li>
            <li><a href="">Admin</a></li>
            <li><%= link_to "Logout", sign_out_path %></li>
            <% else %>
            <li><%= link_to "Login", sign_in_path %></li>
            <li><%= link_to "Join", sign_up_path %></li>
            <% end %>
          </ul>
          <% if user_signed_in? %>
            <div id="logged-in-status">
              <%= current_user.name %> @ <%= current_user.organization_name %>
            </div>
          <% end %>
        </div>
        <nav>
          <ul>
            <% if user_signed_in? %>
              <li><%= link_to 'Dashboard', "/wireframe/dashboard" %></li>
              <li><%= link_to 'Assess', "/wireframe/assess" %></li>
              <li><a href="/wireframe/actionitems">To do</a></li>
              <li><a href="/wireframe/resourcelist">Our Critical Stuff</a></li>
              <li><a href="/wireframe/battlebuddies_help">Lend a Hand</a></li>
              <li><a href="/wireframe/battlebuddies_find">Get Help</a></li>
              <li><a href="/wireframe/kb">Library</a></li>
              <li><input type="text" placeholder=""/></li>
            <% else %>
              <li><%= link_to 'About', about_path %></li>
              <li><%= link_to 'Tour', tour_path %></li>
              <li><%= link_to 'FAQ', faq_path %></li>
              <li><%= link_to 'Links', links_path %></li>
              <li><%= link_to 'Contact', contact_path %></li>
              <li><%= link_to 'Get ArtsReady', sign_up_path %></li>
              <li><%= link_to 'Library' %></li>
              <li><input type="text" placeholder=""/></li>
            <% end %>
          </ul>
        </nav>
      </div>    
    </header>
    <div class="content">
      <div class="container container_12 clearfix">
        <% flash.each do |name, msg| %>  
          <%= content_tag :div, msg, :id => "flash#{name}" %>  
        <% end %>
        <%= yield %>
      </div>
    </div>
  </div>
  <div class="logos container_12 clearfix">
    <h5>ArtsReady is a project of:</h5>
    <%= image_tag('flagler.png') %>
    <%= image_tag('nea.png') %>
    <%= image_tag('mellon.png') %>
    <%= image_tag('south.png') %>
  </div>
  <footer class="container container_12 clearfix">
    
    <p class="f-left">
      Copyright 2011
    </p>
    <nav class="f-right">
      <ul>
        <li><%= link_to 'Sitemap', sitemap_path %></li>
        <li><%= link_to 'Support', support_path %></li>
        <li><%= link_to 'Contact Us', contact_path %></li>
      </ul>
    </nav>
  </footer>


  <!--[if lt IE 7 ]>
    <script src="javascripts/dd_belatedpng.js"></script>
    <script> DD_belatedPNG.fix('img, .png_bg'); </script>
  <![endif]-->

</body>
</html>
