<tr>
  <td class="badge">
    <span class="date"><%= update.created_at.strftime("%D") %></span>
  </td>
  <td class="from">
    <h5><%= update.user_name %></h5>
    <%= link_to update.organization_name, buddy_path(update.organization) %>
  </td>
  <td class="body">
    <div class="less">
      <%= update.message %>
    </div>
  </td>
</tr>