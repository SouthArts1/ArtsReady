<div class="grid_12">
  <h1>Previous Crises</h1>
  <%= render :partial => '/shared/settings_navbar', :locals => {:current_settings_tab => :previous_crises} %>
	<hr>
    <section>
      <table class="resource side-nav-panels">
        <thead>
          <td><p>Declared on</p></td>
          <td><p>Resolved on</p></td>
          <td><p>Privacy</p></td>
          <td><p>Description</p></td>
        </thead>
        <tbody>
          <% @crises.each do |crisis| %>
            <tr>
              <td class="title"><p><%= link_to crisis.created_at, summary_organization_crisis_path(current_org,crisis) %></p></td>
              <td class="description"><p><%= crisis.resolved_on %></p></td>
              <td class="function"><p><%= crisis.visibility.humanize %></p></td>
              <td class="description"><p><%= crisis.description %></p></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </section>
</div>
