<div class="grid_8" style="margin-bottom:20px;">
  <h1>Battle Buddy Network</h1>
  <p><%= link_to "Need help?", page_path('help_battle_buddies') %></p>
</div>
<div class="grid_4 alpha">
  <div style="margin-left:20px">
  <%= render :partial => '/shared/crisis_switch', :locals => {:float => 'left'} %>
  </div>
</div>

<div class="grid_12 alpha">
  <ul class="top-nav battle">
    <li><%= link_to "Lend a Hand", lend_a_hand_path %></li>
    <li><%= link_to "Find a Buddy", get_help_path %></li>
    <li><%= link_to "Crisis Console", crisis_path(current_org.crisis) if current_org.declared_crisis?%></li>
    <li class="active"><%= link_to "Our Profile", buddies_profile_path %></li>
  </ul>
</div>

<% params[:title] = 'Ohno Opera Company'%>
<div class="grid_4">
   <%= gmaps({
       :map_options => {:container_class => "map_canvas_container", :id => "map_canvas", :type => "ROADMAP", :center_longitude => 180, :zoom => 12, :auto_adjust => true, :auto_zoom => false},
       :markers     => { :data => current_org.to_gmaps4rails}
       },
       true,false)
       %>
  <div class="map-address">
    <p>
      <%= current_org.name %><br />
      <%= current_org.address %><br /> <%= current_org.city %>, <%= current_org.state %> <%= current_org.zipcode %><br />
    </p>
  </div>
</div>
<div class="grid_8">
  <section>
    <div class="grid_4 alpha">
      <h2 class="buddy"><%= current_org.name %></h2>
      <div>
        <%= current_org.contact_name %> <br />
        <%= current_org.phone_number %><br />
        <%= current_org.email %><br />
      </div>
    </div>
  </section>
  <section>
    <h3 class="buddy">Our Resources</h3>
    <div class="grid_4 alpha">
			<div id="resources">
      <% @resources.each do |r| %>
	      <div class="resource offer">
	        <h3 class="name plain nopad"><%= link_to r.name, resource_path(r) %></h3>
	        <div class="details">
	          <p><%= r.details %></p>
	        </div>
	      </div>
      <% end %>
			</div>
    </div>

    <div class="grid_4 omega">
      <div class="resource-form rounded">
        <%= form_for(@resource) do |f| %>
        <h3 class="buddy">Add a Resource</h3>
        <div class="field">
          <label>Resource Type *</label>
          <%= f.text_field :name %>
        </div>
        <div class="field">
          <label>Details *</label>
          <%= f.text_area :details, :size => '36x2', :style => 'width:95%' %>
        </div>
        <%= f.submit "Add" %>
        <% end %>
      </div>
    </div>
  </section>
</div>