<tr>
  <td class="badge">
    <span class="date"><%= message.created_at.strftime("%D") %></span><br>
    <%= message.visibility.humanize %>
    <% if current_user.admin? %>
      <span class="message_delete"><%= button_to "Delete", admin_message_path(message), :method => :delete %></span>
    <% end %>
  </td>
  <td class="from">
    <h5><%= message.user_name %></h5>
    <%= link_to message.organization_name, buddy_path(message.organization) %>
  </td>
  <td class="body">
    <div class="less">
      <%= message.content %>
    </div>
  </td>
 </tr>
