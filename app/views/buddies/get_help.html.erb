<div class="grid_8" style="margin-bottom:20px;">
  <h1>Battle Buddy Network</h1>
</div>
<div class="grid_4 alpha">
  <div style="margin-left:20px">
  <%= render :partial => '/shared/crisis_switch', :locals => {:float => 'left'} %>
  </div>
</div>

<div class="grid_12 alpha">
  <ul class="top-nav battle">
    <li><%= link_to "Lend a Hand", lend_a_hand_path %></li>
    <li class="active"><%= link_to "Find a Buddy", get_help_path %></li>
    <li><%= link_to "Crisis Console", crisis_path(current_org.crisis) if current_org.declared_crisis?%></li>
    <li><%= link_to "Our Profile", buddies_profile_path %></li>
  </ul>
</div>

<div class="grid_4">
  <%= gmaps(
  "map_options" => { "id" => "map_canvas_large", "type" => "ROADMAP", "center_longitude" => 180, "zoom" => 12, "auto_adjust" => true, "auto_zoom" => false},
  "markers" => { "data" => @buddies.to_gmaps4rails}) %>
</div>
<div class="grid_8">
  <section>
    <h2 class="buddy"><%= pluralize(@available_buddies.size, "Nearby Organization") %> Who Can Help</h2>
    <div class="buddy-filter">
      Show buddies within <%= text_field_tag :miles, 50, :style => 'width: 40px;' %> miles offering
      <%= select_tag :resource, options_for_select(['Any Help', 'Office Space', 'Personnel', 'Prop Storage']) %>
      &nbsp;
      <%= link_to_function 'Filter', '', :class => 'button' %>
    </div>
    <div class="buddies">
      <% @available_buddies.each do |buddy| %>
      <%= render :partial => 'buddy', :object => buddy   %>
      <% end %>
    </div>
  </section>

  <section>
    <h2 class="buddy"><%= pluralize(@pending_buddies.size, "Pending Battle Buddy") %></h2>
    <div class="buddies">
      <% @pending_buddies.each do |buddy| %>
      <div class="buddy">
      <div class="badge"><%= image_tag('map_marker.png') %></div>
      <h3 class="name plain"><%= link_to buddy.name, buddy_path(buddy) %></h3>
      <div class="address"><%= link_to buddy.full_street_address %></div>
      <div class="requested-help"><%= debug(buddy) %></div>
      </div>
      <% end %>
    </div>
  </section>
</div>