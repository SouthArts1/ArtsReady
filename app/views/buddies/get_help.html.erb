<div class="grid_12 alpha">
  <%= render '/member/crisis_switch' %>
  <h1>Battle Buddy Network</h1>
  <ul class="top-nav battle">
    <li><%= link_to "Lend a Hand", buddies_lend_a_hand_path %></li>
    <li class="active"><%= link_to "Get Help", buddies_get_help_path %></li>
    <li><%= link_to "Crisis Console", tbd_path %></li>
    <li><%= link_to "Our Profile", buddies_profile_path %></li>
  </ul>
</div>


<div class="grid_4">
  <div id="map_canvas" class="large">
  </div>
</div>
<div class="grid_8">
  <section>
    <h2 class="buddy">3 Nearby Organization Who Can Help</h2>
    <div class="buddy-filter">
      Show buddies within <%= text_field_tag :miles, 50, :style => 'width: 40px;' %> miles offering
      <%= select_tag :resource, options_for_select(['Any Help', 'Office Space', 'Personnel', 'Prop Storage']) %>
      &nbsp; 
      <%= link_to_function 'Filter', '', :class => 'button' %>
    </div>
    <div class="buddies">
      
      <%= render :partial => 'buddy', :locals => {:title => 'Academy of Vocal Arts: Helen Corning Warden Theater', :buddy => false} %>
      <%= render :partial => 'buddy', :locals => {:title => 'Act II Playhouse', :buddy => false} %>
      <%= render :partial => 'buddy', :locals => {:title => 'Amaryllis Theatre Company: The Playground at the Adrienne', :buddy => false} %>
    </div>
  </section>

  <section>
    <h2 class="buddy">1 Pending Battle Buddy</h2>
    <div class="buddies">
      <%= render :partial => 'buddy', :locals => {:title => 'Amaryllis Theatre Company: The Playground at the Adrienne', :buddy => false} %>
    </div>
  </section>
</div>

<script type="text/javascript"
    src="http://maps.google.com/maps/api/js?sensor=false">
</script>
<script type="text/javascript">

  $(document).ready(function() {
    var latlng = new google.maps.LatLng(33.848995,-84.387982);
    var myOptions = {
      zoom: 10,
      center: latlng,
      mapTypeId: google.maps.MapTypeId.ROADMAP
    };
    var myMap = new google.maps.Map(document.getElementById("map_canvas"), myOptions);
    
    new google.maps.Marker({
        position: latlng, 
        map: myMap,
        title:"Home Base",
        icon: '/images/star_48.png'
    });
    markers = Array(1,2,3)
    $.each(markers, function(key, value) {
      var l = new google.maps.LatLng(33.748995 + Math.floor(Math.random()*11) * 0.01,-84.387982 + Math.floor(Math.random()*11) * 0.01);

      new google.maps.Marker({
        position: l, 
        map: myMap
      });

    });

  });
</script>