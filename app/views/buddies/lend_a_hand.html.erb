<div class="grid_8" style="margin-bottom:20px;">
  <h1>Battle Buddy Network</h1>
</div>
<div class="grid_4 alpha">
  <div style="margin-left:20px">
  <%= render :partial => '/shared/crisis_switch', :locals => {:float => 'left'} %>
  </div>
</div>

<div class="grid_12 alpha">
  <ul class="top-nav battle">
    <li class="active"><%= link_to "Lend a Hand", lend_a_hand_path %></li>
    <li><%= link_to "Find a Buddy", get_help_path %></li>
    <li><%= link_to "Crisis Console", crisis_path(current_org.crisis) if current_org.declared_crisis?%></li>
    <li><%= link_to "Our Profile", buddies_profile_path %></li>
  </ul>
</div>

<div class="grid_4">
  <section>
    <h2 class="buddy">Organizations in Need</h2>
    <div class="buddies">
      <%= render :partial => 'crisis', :collection => @public_crises %>
      <%= render :partial => 'crisis', :collection => @network_crises %>
      <%= render :partial => 'crisis', :collection => @private_crises %>
    </div>
  </section>
</div>

<div class="grid_4">
  <section>
    <% @public_crises.each do |crisis| %>
      <%= render :partial => 'crisis_log', :locals => {:crisis => crisis} %>
    <% end %>
    <% @network_crises.each do |crisis| %>
      <%= render :partial => 'crisis_log', :locals => {:crisis => crisis} %>
    <% end %>
    <% @private_crises.each do |crisis| %>
      <%= render :partial => 'crisis_log', :locals => {:crisis => crisis} %>
    <% end %>
  </section>

</div>

<div class="grid_4">
  <h2>Messages</h2>
  <section>
    <table id="messages">
    <%= render :partial => 'message', :collection => @messages %>
    </table>
  </section>
</div>