<div class="grid_8" style="margin-bottom:20px;">
  <h1>Battle Buddy Network</h1>
</div>
<div class="grid_4 alpha">
  <div style="margin-left:20px">
  <%= render :partial => '/shared/crisis_switch', :locals => {:float => 'left'} %>
  </div>
</div>

<div class="grid_12 alpha">
  <ul class="top-nav battle">
    <li class="active"><%= link_to "Lend a Hand", lend_a_hand_path %></li>
    <li><%= link_to "Find a Buddy", get_help_path %></li>
    <li><%= link_to "Crisis Console", crisis_path(current_org.crisis) if current_org.declared_crisis?%></li>
    <li><%= link_to "Our Profile", buddies_profile_path %></li>
  </ul>
</div>

<div class="grid_4">
  <%= gmaps(
  "map_options" => { "id" => "map_canvas_large", "type" => "ROADMAP", "center_longitude" => 180, "zoom" => 12, "auto_adjust" => true, "auto_zoom" => false},
  "markers" => { "data" => @buddies.to_gmaps4rails}) %>
</div>

<div class="grid_8">
  <section>
    <h2 class="buddy">Messages</h2>
    <table id="messages">
      <% 5.times do %>
        <%#= render 'crises/update' %>
      <% end %>
    </table>
    <div id="messages-nav">
      <%= link_to '&raquo; more'.html_safe, "", :class => 'button white' %>
    </div>
  </section>

  <section>
    <h2 class="buddy"><%= @crises.count %> Nearby Organizations in Need</h2>
    <div class="buddy-filter">
      Show buddies within <%= text_field_tag :miles, 50, :style => 'width: 40px;' %> miles looking for
      <%= select_tag :resource, options_for_select(['Any Help', 'Office Space', 'Personnel', 'Prop Storage']) %>
      &nbsp; 
      <%= link_to_function 'Filter', '', :class => 'button' %>
    </div>
    <div class="buddies">
			<% @crises.each do |crisis| %>
      <%= render :partial => 'buddy', :object => crisis   %>
			<% end %>
    </div>
  </section>
</div>