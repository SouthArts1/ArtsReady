<hgroup>
  <h1>Template: <%= @template.name %></h1>
</hgroup>

<div class="grid_12">
  <p>
    <strong>
      Your changes have not been saved! Use the Save button below, or
      the Edit button to go back to the edit form.
    </strong>
  </p>

  <p>
    <em>
      Note: "Look and feel" is approximate.
    </em>
  </p>

  <div class="template-preview">
    <% rendering = @template.render_preview %>

    <p class="subject">
      Subject: <%= rendering.subject %>
    </p>

    <%= raw(rendering.body) %>
  </div>

  <%= simple_form_for([:admin, @template]) do |f| %>
    <section>
      <%= f.input :subject, as: :hidden %>
      <%= f.input :body, as: :hidden %>

      <div class="actions">
        <%= f.submit 'Save', :class => 'button' %>
        <%= f.submit 'Edit', :class => 'button' %>
      </div>
    </section>
  <% end %>
</div>
