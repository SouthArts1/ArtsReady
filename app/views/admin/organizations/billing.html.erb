<h1>Admin: Organization</h1>
<h2><%= @organization.name %></h2>

<div class="grid_8 admin-actions">
  <h4>Admin Actions</h4>
  <%= form_for([:admin, @organization]) do |f| %>
    <%= f.hidden_field :active, :value => true %>
    <%= f.submit "Approve" %>
  <% end unless @organization.active? %>
  <%= form_for([:admin, @organization]) do |f| %>
    <%= f.hidden_field :active, :value => false %>
    <%= f.submit "Disable" %>
  <% end if @organization.active? %>
  <%= button_to("DELETE", admin_organization_path(@organization),
                :confirm => "Delete #{@organization.name} and #{pluralize @organization.users.count, 'user'}? THIS CAN NOT BE UNDONE.",
                :method  => :delete) if @organization.deletable? %>
  <% if @organization.subscription && @organization.subscription.active? %>
    <%= button_to("Cancel Billing", billing_cancel_path(@organization),
                  :confirm => "THIS CAN NOT BE UNDONE.",
                  :method  => :delete) %>
    <%= link_to 'Edit Billing', [:edit, :admin, @organization, :billing], class: 'button' %>
  <% end %>
</div>
<div class="grid_12">
  <%= render 'admin/shared/organization_menu' %>
</div>
<div class="grid_8">
  <section>
    <h3>Billing Information:</h3>
    <% if @subscription && @subscription.active? %>
      <%= render 'shared/billing_info' %>

      <% code = @subscription.discount_code %>
      <% if code %>
        <p>
          Discount code:
          <%= link_to code.discount_code, [:edit, :admin, code] %>
        </p>
      <% end %>
    <% elsif @organization.next_billing_date %>
      <p>
        Next billing date:
        <%= @organization.next_billing_date.try(:strftime, "%B %d, %Y") %>
        (<%= pluralize @organization.days_left_until_rebill, 'day' %>)
      </p>
    <% else %>
      <p>
        This organization has not set up their billing yet!
        <%= link_to "Allow provisional access for 1 year",
          "/admin/organizations/allow_provisionary_access/#{@organization.id}"
        %>
      </p>

    <% end %>
  </section>
</div>
