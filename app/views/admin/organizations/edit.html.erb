<h1>Admin: Organization</h1>
<h2><%= @organization.name %></h2>
<%= form_for([:admin, @organization]) do |f| %>
<%= f.hidden_field :active, :value => true %>
<%= f.submit "Approve" %>
<% end unless @organization.active?%>

<ul class="top-nav settings">
  <li class="active"><%= link_to "Organization", edit_admin_organization_path(@organization) %></li>
  <li><%= link_to "Users", admin_organization_users_path(@organization) %></li>
</ul>
<div class="grid_8">
  <section>
    <%= form_for([:admin, @organization]) do |f| %>
    <p>
      <label>Organization Name</label>
      <%= f.text_field :name %>
    </p>

    <p>
      <label>Address</label>
      <%= f.text_field :address %><br />
      <%#= f.text_field :address_2 %>
    </p>

    <p>
      <label>City</label>
      <%= f.text_field :city %>
    </p>
  <div class="grid_4 alpha">
    <p>
      <label>State</label>
      <%= f.text_field :state %>
    </p>
  </div>
  <div class="grid_4 omega">
    <p>
      <label>Zip</label>
      <%= f.text_field :zipcode %>
    </p>
  </div>
    <p>
      <label>Website</label>
      <%#= f.text_field :website %>
    </p>

    <p>
      <label>Phone</label>
      <%#= f.text_field :phone %>
    </p>

    <p>
      <label>Fax</label>
      <%#= f.text_field :fax %>
    </p>

      <%= f.submit 'Save Settings' %>
    </p>
    <% end %>
  </section>
</div>