<%= render 'admin/shared/organization_header' %>

<div class="grid_8 admin-actions">
  <%= render 'admin/shared/organization_actions' %>
</div>

<div class="grid_12">
  <%= render 'admin/shared/organization_menu' %>
</div>

<div class="grid_8">
  <section>
    <%= form_for([:admin, @organization]) do |f| %>
      <legend>Organization Information</legend>
      <p>
        <%= f.label :name %>
        <%= f.text_field :name %>
      </p>
      <p>
        <%= f.label :address, 'Physical Address' %>
        <%= f.text_field :address %>
      </p>
      <p>
        <%= f.label :address_additional, 'Physical Address Line 2' %>
        <%= f.text_field :address_additional %>
      </p>
      <div class="grid_4 alpha">
      <p>
        <%= f.label :city %>
        <%= f.text_field :city %>
      </p>
      </div>
      <div class="grid_1">
      <p>
        <%= f.label :state %>
        <%= f.text_field :state %>
      </p>
      </div>
      <div class="grid_3 omega">
      <p>
        <%= f.label :zipcode %>
        <%= f.text_field :zipcode %>
      </p>
      </div>
      <legend>General Contact Information</legend>
      <p>
        <%= f.label :contact_name %>
        <%= f.text_field :contact_name %>
      </p>
      <p>
        <%= f.label :email %>
        <%= f.text_field :email %>
      </p>
      <p>
        <%= f.label :phone_number %>
        <%= f.text_field :phone_number %>
      </p>
      <p>
        <%= f.label :fax_number %>
        <%= f.text_field :fax_number %>
      </p>
      <legend>Reporting Information</legend>
      <p>
        <%= f.label :parent_organization %>
        <%= f.text_field :parent_organization %>
      </p>
      <p>
        <%= f.label :subsidizing_organization %>
        <%= f.text_field :subsidizing_organization %>
      </p>
      <p>
        <%= f.label :organizational_status %> <%= f.select :organizational_status, ArtsreadyDomain::ORGANIZATIONAL_STATUSES, :include_blank => true %>
      </p>
      <p>
        <%= f.label :operating_budget, "Last year my organization's operating budget was:"  %> <%= f.select :operating_budget, ArtsreadyDomain::OPERATING_BUDGETS, :include_blank => true %>
      </p>
      <p>
        <%= f.label :nsic_code, 'National Standard Institution Code' %>
        <%= f.select :nsic_code, ArtsreadyDomain::NSIC_CODES, :include_blank => true %> <br>
        <%= f.label :other_nsic_code, 'Enter other codes here:' %>
        <%= f.text_field :other_nsic_code %>
      </p>
    </fieldset>
      <%= f.submit 'Save Settings' %>
    <% end %>
  </section>
</div>
