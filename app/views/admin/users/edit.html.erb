<h1>Admin: User Info</h1>
<h2><%= @organization.name %></h2>

<ul class="top-nav settings">
  <li><%= link_to "Organization", edit_admin_organization_path(@organization) %></li>
  <li><%= link_to "Users", admin_organization_users_path(@organization) %></li>
  <li class="active"><%= link_to 'Edit User', edit_admin_organization_user_path(@organization,@user) %></li>
</ul>

<div class="grid_8">
  <section>
    <%= form_for([:admin,@organization,@user]) do |f| %>
    <div class="grid_4 alpha">
      <p>
        <%= f.label :first_name %>
        <%= f.text_field :first_name %>
      </p>
    </div>
    <div class="grid_4 omega">
      <p>
        <%= f.label :last_name %>
        <%= f.text_field :last_name %>
      </p>
    </div>
    <div class="clear"></div>
    <p>
      <%= f.label :email %>
      <%= f.text_field :email %>
    </p>
    <p>
      <%= f.label :disabled %>
      <%= f.check_box :disabled %>
    </p>
    <p>
      <%= f.submit 'Save Settings' %>
    </p>
    <% end %>
  </section>
  <%= form_for([:admin, @organization, @user]) do |f| %>
    <%= f.hidden_field :admin, :value => true %>
    <%= f.submit 'Promote to Admin', :confirm => 'Are you sure? THIS WILL ALLOW FULL ADMIN ACCESS TO ARTSREADY' %>
  <% end unless @user.admin? || @user.organization == current_org %>
  <%= form_for([:admin, @organization, @user]) do |f| %>
    <%= f.hidden_field :admin, :value => false %>
    <%= f.submit 'Remove Admin Privileges', :confirm => 'Are you sure?' %>
  <% end if @user.admin? && @user != current_user  %>  
</div>